<div class="row">
  <div class="col-md-4 col-md-offset-4 bordered">
    <%= form_tag set_name_path, method: :post, class: 'form-horizontal login-form', role: 'login' do %>
      <div class="form-group">
        <div class="col-sm-12">
          <%= text_field_tag 'name', params[:name], class: 'form-control', placeholder: 'Enter your name', autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-10">
          <button type="submit" class="btn btn-primary">Join The Chat</button>
        </div>
      </div>
    <% end %>
  </div>
</div>
